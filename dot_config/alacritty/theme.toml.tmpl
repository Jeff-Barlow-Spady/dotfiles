{{- if eq .chezmoi.os "linux" }}
{{- $theme := index .chezmoi "current_theme" | default "gruvbox" }}
{{- $themePath := printf "themes/%s/alacritty.toml" $theme }}
{{- if (stat $themePath) }}
{{ include $themePath }}
{{- else }}
# Theme file not found: {{ $themePath }}
# Falling back to gruvbox
{{ include "themes/gruvbox/alacritty.toml" }}
{{- end }}
{{- end }}

